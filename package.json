{
  "name": "bsweb-saas",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:server": "tsc -p tsconfig.server.json",
    "build:all": "npm run build && npm run build:server",
    "start": "node dist/server.js",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "infra:up": "docker compose -f infra/docker/docker-compose.dev.yml up -d",
    "infra:down": "docker compose -f infra/docker/docker-compose.dev.yml down",
    "infra:logs": "docker compose -f infra/docker/docker-compose.dev.yml logs -f",
    "env:check": "node -e \"console.log('DB_PROVIDER=', process.env.DB_PROVIDER || 'not set'); console.log('DATABASE_URL=', process.env.DATABASE_URL || 'not set')\""
  },
  "dependencies": {
    "next": "^16.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^16.0.0",
    "typescript": "^5.0.0"
  }
}

